<?xml version="1.0" encoding="UTF-8"?>
<analysisEngineDescription
	xmlns="http://uima.apache.org/resourceSpecifier">
	<frameworkImplementation>org.apache.uima.java</frameworkImplementation>
	<primitive>true</primitive>
	<annotatorImplementationName>com.ctapweb.feature.featureAE.CohesiveComplexityAE
	</annotatorImplementationName>
	<analysisEngineMetaData>
		<name>Cohesive Complexity Feature: Concessive Connectives per Token (Breindl for German)</name>
		<description>Calculates the cohesive complexity of the text.
Calculates the concessive connectives per token, listed by Breindl for German, by Nadezda Okinina and Lorenzo Zanasi for Italian.
			
Definition:
	number of concessive connectives / number of tokens

This feature is not available for English.

AAE dependency:
	SentenceAnnotator.xml
	TokenAnnotator.xml
	NConnectives_Breindl_Concessive_Feature.xml
	POSDensity_NonPunctuationWords.xml
		</description>
		<version>1.0</version>
	<vendor>Zarah Weiss</vendor>
	<configurationParameters>
		<configurationParameter>
			<name>aeID</name>
			<type>Integer</type>
			<multiValued>false</multiValued>
			<mandatory>true</mandatory>
		</configurationParameter>
		<configurationParameter>
			<name>numerator</name>
			<description />
			<type>String</type>
			<multiValued>false</multiValued>
			<mandatory>true</mandatory>
		</configurationParameter>
		<configurationParameter>
			<name>LanguageCode</name>
			<type>String</type>
			<multiValued>false</multiValued>
			<mandatory>false</mandatory>
		</configurationParameter>
		<configurationParameter>
			<name>denominator</name>
			<description/>
			<type>String</type>
			<multiValued>false</multiValued>
			<mandatory>true</mandatory>
		</configurationParameter>
	</configurationParameters>
	<configurationParameterSettings>
		<nameValuePair>
			<name>numerator</name>
			<value>
				<string>nBreindl_C</string>
			</value>
		</nameValuePair>
		<nameValuePair>
			<name>denominator</name>
			<value>
				<string>nWords</string>
			</value>
		</nameValuePair>
	</configurationParameterSettings>
	<typeSystemDescription>
		<imports>
			<import
				location="../type_system/feature_type/CohesiveComplexityType.xml" />
            <import location="../type_system/feature_type/NTokenType.xml"/>
		</imports>
	</typeSystemDescription>
	<typePriorities />
	<fsIndexCollection />
	<capabilities>
		<capability>
			<inputs>
				<type allAnnotatorFeatures="true">com.ctapweb.feature.type.NConnectives
				</type>
                <type allAnnotatorFeatures="true">com.ctapweb.feature.type.NToken</type>
			</inputs>
			<outputs>
				<type allAnnotatorFeatures="true">com.ctapweb.feature.type.CohesiveComplexity
				</type>
			</outputs>
			<languagesSupported>
				<language>DE</language>
				<language>IT</language>
				<!-- add new language here -->
			</languagesSupported>
		</capability>
	</capabilities>
	<operationalProperties>
		<modifiesCas>true</modifiesCas>
		<multipleDeploymentAllowed>true</multipleDeploymentAllowed>
		<outputsNewCASes>false</outputsNewCASes>
	</operationalProperties>
	</analysisEngineMetaData>
	<resourceManagerConfiguration />
</analysisEngineDescription>
